<div class="tab-pane fade show active" id="show-activity">
  <!-- DataTales Example -->
  <div class="card shadow mb-4 mt-2">
    <div class="card-body">
      <div class="row">
        <div class="col-md-5">
          <form
            action="/admin/item/add/activity"
            method="POST"
            enctype="multipart/form-data"
          >
            <div class="form-group">
              <label for="name" class="col-form-label">Name</label>
              <input
                required
                name="name"
                type="text"
                class="form-control"
                placeholder="Isi nama"
              />
            </div>
            <div class="form-group">
              <label for="type" class="col-form-label">Type</label>
              <input
                required
                name="type"
                type="text"
                class="form-control"
                placeholder="Isi Tipe"
              />
            </div>
            <div class="form-group">
              <label for="image" class="col-form-label">Image</label>
              <input required name="image" type="file" class="form-control" />
            </div>

            <input type="hidden" name="itemId" value="<%= itemId %>" />

            <button type="submit" class="btn btn-primary">Simpan</button>
          </form>
        </div>
        <div class="col-md-7">
          <div class="table-responsive">
            <table
              class="table table-bordered"
              id="dataTableActivity"
              width="100%"
              cellspacing="0"
            >
              <thead>
                <tr>
                  <th>No</th>
                  <th>Name</th>
                  <th>Type</th>
                  <th>Image URL</th>
                  <th>Action</th>
                </tr>
              </thead>

              <tbody>
                <% for (let i = 0; i < activity.length; i++) { %>
                <tr>
                  <td><%= i + 1 %></td>
                  <td><%= activity[i].name %></td>
                  <td><%= activity[i].type %></td>
                  <td>
                    <img
                      src="https://admin-pro38.herokuapp.com/<%= activity[i].imageUrl %>"
                      alt="imageUrl"
                      height="70px"
                      width="70px"
                    />
                  </td>
                  <td>
                    <form
                      action="/admin/item/<%= itemId %>/activity/<%= activity[i].id %>?_method=DELETE"
                      method="POST"
                    >
                      <a
                        href="javascript:void()"
                        type="button"
                        class="btn-warning btn-circle btn-sm button-update"
                        data-id="<%= activity[i].id %>"
                        data-name="<%= activity[i].name %>"
                        data-type="<%= activity[i].type %>"
                      >
                        <i class="fas fa-edit"></i>
                      </a>
                      <button
                        type="submit"
                        class="btn-danger btn-circle btn-sm"
                      >
                        <i class="fas fa-trash"></i>
                      </button>
                    </form>
                  </td>
                </tr>
                <%}%>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
