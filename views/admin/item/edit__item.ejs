<div
  class="tab-pane fade show active"
  id="edit__item"
  role="tabpanel"
  aria-labelledby="profile-tab"
>
  <div class="card shadow mb-4 mt-2">
    <div class="card-body">
      <form action="/admin/item/<%= item.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label for="name">Title</label>
          <input required name="title" type="text" class="form-control" value="<%= item.title %>"/>
        </div>

        <div class="form-group">
          <label for="name">Price</label>
          <input
            required
            name="price"
            type="number"
            class="form-control"
            min="0"
            value="<%= item.price %>"
          />
        </div>

        <div class="form-group">
          <label for="name">City</label>
          <input
            required
            name="city"
            type="text"
            class="form-control"
            min="0"
            value="<%= item.city %>"
          />
        </div>
        <div class="form-group">
          <label for="name">Category</label>
          <select name="categoryId" class="form-control">
            <option value="<%= item.categoryId._id %>">--- <%= item.categoryId.name %> ---</option>
            <% for(let i = 0; i< category.length; i++) {%>
            <option value="<%= category[i].id %>">
              <%= category[i].name %>
            </option>
            <%}%>
          </select>
        </div>

        <div class="form-group">
          <label for="name">Image</label>
          <input
            multiple
            name="image"
            type="file"
            class="form-control"
          />
        </div>

        <div class="form-group">
          <label for="name">Description</label>
          <textarea name="about" class="form-control"><%= item.description %></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Tambah</button>
      </form>
    </div>
  </div>
</div>
